@model sistema.Models.Ips

@{
    ViewData["Title"] = "IDENTIFICAÇÃO:::";
}

@if (User?.Identity?.IsAuthenticated ?? false)
{ 

<div class="row" id="formularios">
    <div class="col-md-12">
        <form asp-action="DadosIps">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="codigo" />

          
            <div class="form-group">
      
                <input asp-for="nome"id="InputItemOne"  class="form-control" placeholder="EX: Digite o nome do IP"/>
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>

          
            <div class="form-group">
      
                <input asp-for="ip" id="InputItemOne" class="form-control" placeholder="EX: Digite o IP"/>
                <span asp-validation-for="ip" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="switch">
                    <input type="checkbox" asp-for="Ativo">
                    <span class="slider round"></span>
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="ATUALIZAR:::" id="btn" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
}else{

   Html.RenderPartial("~/Views/Shared/Error/error.cshtml"); 

}



@{Html.RenderPartial("~/Views/Shared/BreadCrumbs/Footer.cshtml"); }
@{Html.RenderPartial("~/Views/Shared/Buttons/FloatIA.cshtml"); }
@{Html.RenderPartial("~/Views/Shared/Buttons/Float.cshtml"); }

