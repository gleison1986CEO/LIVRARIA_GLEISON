@model IEnumerable<sistema.Models.Mapa>

@{
    ViewData["Title"] = "LOCALIZAÇÕES";
}


@if (User?.Identity?.IsAuthenticated ?? false)
{ 
        
<div id="caixas">
         <form action=""       id="form">
         <input  type="textr"  id="SearchOneItemOneContenteSearchDespesas"  name="Nome"  placeholder="EX: DIGITE NOME DO DISPOSITIVO CADASTRADO...">
         <button type="submit" id="button_search_cadastro">Pesquisar</button>
