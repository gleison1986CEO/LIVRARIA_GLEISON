                                    <th><span class="las la-sort"></span>Latitude</th>
                                    <th><span class="las la-sort"></span>Longitude</th>
                                    <th><span class="las la-sort"></span>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                     <td>
                                        @Html.DisplayFor(modelItem => item.codigo)
                                    </td>
                                    

                                    <td>
                                        <a asp-controller="Dispositivo" asp-action="Index" id="SUPERLINKS"  asp-route-Nome="@item.aeronave" >  @Html.DisplayFor(modelItem => item.aeronave) </a>
