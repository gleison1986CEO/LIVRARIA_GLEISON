                            </thead>
                            <tbody>
                                <tr>
                                     <td>
                                        @Html.DisplayFor(modelItem => item.codigo)
                                    </td>
                                    

                                    <td>
                                       <a asp-controller="Dispositivo" asp-action="Index" id="SUPERLINKS"  asp-route-Nome="@item.aeronave" >  @Html.DisplayFor(modelItem => item.aeronave) </a>
                                    </td> 

                                    <td>
                                        @Html.DisplayFor(modelItem => item.latitude)
                                    </td> 


                                    <td>
                                        @Html.DisplayFor(modelItem => item.longitude)
                                    </td> 

                                    
                                    <td>
                                          <a asp-action="DadosMapa" id="cardItem" asp-route-id="@item.codigo"  asp-route-hash="@ViewBag.HASHCODE">
