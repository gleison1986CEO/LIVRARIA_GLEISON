                <option value=" ">Pesquisar pela Categoria</option>
         </select>      
         <select id="SearchOneItemOneContenteSearchFULL" name="SubCategoria" asp-items="ViewBag.SUBCATEGORIA" >
                <option value=" ">Pesquisar pela SubCategoria</option>
