         <button type="submit" id="button_search_cadastro_new"><a id="link" href="/Home/WebSite">WebSite</a></button>
         </form>        
</div>        




<span id="SEND">Faça Pesquisas Relacionadas a Informação do Produto</span>

    <div class="content" id="GRAFICOS">
        <div class="cards">


            <div class="card">
                <div class="card-left">
                    <div class="card-icon icon-two">
                        <i class="fas fa-book"></i>
                    </div>
                </div>
                <div class="card-right">
                    <div class="card-top-info">
                        <h2>Produtos</h2>
                        <h4>@ViewBag.TOTAL Unid.</h4>
                    </div>
    
                </div>
            
    

    </div>
    </div>
</div>    



<span id="SEND">Informações para Produtos</span>
<div id="IDTABELAS">

@foreach (var item in Model) {
  
  @if(item.Ativo == true){
  <div id="caixas">
                          <table width="100%">
                            <thead>
                                <tr>
                                    <th><span class="las la-sort"></span>Foto</th>
                                    <th><span class="las la-sort"></span>Titulo</th>
                                    <th><span class="las la-sort"></span>Categoria</th>
                                    <th><span class="las la-sort"></span>SubCategoria</th> 
                                    <th><span class="las la-sort"></span>Console</th> 
                                    <th><span class="las la-sort"></span>Cupom</th> 
                                    <th><span class="las la-sort"></span>Valor</th> 
                                    <th><span class="las la-sort"></span>Data</th>                                    
                                    <th><span class="las la-sort"></span>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
          
                                    <td>
                                        <img  id="fotos"src="~/images/produto/@Html.DisplayFor(modelItem => item.foto)@ViewBag.EXT">
                                    </td> 
 
                                    <td>
                                        @Html.DisplayFor(modelItem => item.titulo)
                                    </td> 
  
                      
                                    <td>
                                        @Html.DisplayFor(modelItem => item.categoria)
                                    </td>     
 
                                    <td>
                                        @Html.DisplayFor(modelItem => item.subcategoria)
                                    </td> 
 
                                    <td>
                                        @Html.DisplayFor(modelItem => item.console)
                                    </td> 
 
                                    <td>
                                        R$:@Html.DisplayFor(modelItem => item.cupom),00
                                    </td> 

                                    <td>
                                        R$:@Html.DisplayFor(modelItem => item.valor),00
                                    </td> 
           

                                    <td>
                                        @Html.DisplayFor(modelItem => item.data)
                                    </td>  
                                   
                                    <td>
                                          <a asp-action="Dados" id="cardItem" asp-route-id="@item.codigo"  asp-route-hash="@ViewBag.HASHCODE">
