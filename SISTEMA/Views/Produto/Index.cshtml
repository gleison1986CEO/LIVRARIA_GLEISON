@model IEnumerable<sistema.Models.Produto>

@{
    ViewData["Title"] = "PRODUTO";
}


@if (User?.Identity?.IsAuthenticated ?? false)
{ 

<div id="myModal" class="modal">
  <span class="close">&times;</span>
  <img class="modal-content" id="img01">
  <div id="caption"></div>
</div>    


<div id="caixas">
         <form action=""       id="form">
         
         <input  type="text"  id="SearchOneItemOneContenteSearchFULL"  name="Titulo"  placeholder="EX: Nome do Produto">

