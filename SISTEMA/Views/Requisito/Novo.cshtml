@model sistema.Models.Requisito

@{
    ViewData["Title"] = "REQUISITO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (User?.Identity?.IsAuthenticated ?? false)
{ 
    
<div class="row" id="formularios">
    @{Html.RenderPartial("~/Views/Shared/BreadCrumbs/Titulo.cshtml"); }

    <div class="col-md-12">
        <form asp-action="Novo" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="hashcode"  class="form-control" value="0" readonly="true"/>
            <input type="hidden" asp-for="data"  class="form-control" value="0" readonly="true"/>
            <input asp-for="date"  type="hidden" id="theDate" required/>

            
            <span id="SEND">Cadastro de Requisitos</span>
 
            <div id="DADOS">
                       
                    <div class="form-group">
                            <select asp-for="nome"  id="InputItemOne" required asp-items="ViewBag.PRODUTO" required>
                                <option>Escolha o Produto</option>
                            </select>
                    </div>                                     
            </div>      

 
            <div id="DADOS">
                       
                    <div class="form-group">
                            <select asp-for="console"  id="InputItemOne" required asp-items="ViewBag.CONSOLE" required>
                                <option>Escolha o  Console</option>
                            </select>
                    </div>                                     
            </div>      


            <div id="DADOS">
                        <div class="form-group">
                
                            <input asp-for="video" id="InputItemOne"   class="form-control" placeholder="ex: Url do Vídeo " required/>
                            <span asp-validation-for="video" class="text-danger"></span>

                        </div>   
                        <div class="form-group">
                
                            <input asp-for="audio" id="InputItemOne"   class="form-control" placeholder="ex: Inglês/En" required/>
                            <span asp-validation-for="audio" class="text-danger"></span>

                        </div>   
                        <div class="form-group">
                
                            <input asp-for="tamanho" id="InputItemOne"   class="form-control" placeholder="ex: Tamanho do produto" required/>
                            <span asp-validation-for="tamanho" class="text-danger"></span>

                        </div>                           
            </div>  




            <div id="DADOS">
                        <div class="form-group">
                            <span id="SEND">Digite algumas Informações sobre a Categoria</span>
                            <textarea type="Text"  id="textArea" rows="20" cols="120" asp-for="descricao" type="text" class="form-control" required>  </textarea>                                                   
                            <span asp-validation-for="descricao" class="text-danger"></span>

                        </div>  
            </div>  

      


            <div class="form-group form-check">
                <label class="switch">
                    <input type="checkbox" asp-for="Ativo" checked>
                    <span class="slider round"></span>
                </label>
                <span id="SEND">Escolha ativo/inativo</span>
            </div>
            <div class="form-group">
                <input type="submit" value="CADASTRAR" id="btn" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

}else{

   Html.RenderPartial("~/Views/Shared/Error/error.cshtml"); 

}



@{Html.RenderPartial("~/Views/Shared/BreadCrumbs/Footer.cshtml"); }
@{Html.RenderPartial("~/Views/Shared/Buttons/FloatIA.cshtml"); }
@{Html.RenderPartial("~/Views/Shared/Buttons/Float.cshtml"); }
